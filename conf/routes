# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page

POST   /linkUser                      controllers.UserController.linkUser(request: Request)
GET    /logout                   controllers.UserController.logOut(request: Request)
POST    /signup										controllers.UserController.signUp(request: Request)
GET     /signup                   controllers.HomeController.signUp(request: Request)

POST    /										      controllers.UserController.logIn(request: Request)
GET     /                         controllers.HomeController.home(request: Request)

GET     /student                  controllers.HomeController.student(request: Request)

GET     /teacher                  controllers.HomeController.teacher(request: Request)

+ nocsrf
POST   /search                    controllers.UserController.search(request: Request)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
