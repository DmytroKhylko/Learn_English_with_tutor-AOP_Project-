# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page


POST    /signin										controllers.UserController.signin(request: Request)
GET     /signin                   controllers.HomeController.signin(request: Request)

POST    /										      controllers.UserController.login(request: Request)
GET     /                         controllers.HomeController.home(request: Request)

GET     /student                  controllers.HomeController.student(login: String, request: Request)

GET     /teacher                  controllers.HomeController.teacher(login: String, request: Request)



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
